<h2><%= @cocktail.name %></h2>


<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.ingredient.name %></li>
    <li class="list-group-item"><%= dose.description %></li>
    <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"%>

  <% end %>
</ul>

<br>

<%= link_to 'List cocktails', cocktails_path, class: "btn btn-primary" %>
<br>
<br>
<%= link_to 'Create a dose / ingredient', new_cocktail_dose_path(@cocktail), class: "btb btn-dark " %>
